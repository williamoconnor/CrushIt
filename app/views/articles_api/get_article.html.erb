<div class="container">  
  <div class="title">
    <h1 id="crush-it-title"> CrushIt! </h1>
    <p>Blog</p>
  </div>
  <div class="content">
  	<h1><%= @article.name %></h1>
  	<h3>By: <%= @article.author %></h3>
  	<% @paragraphs = @article.body.split("\n") %>
  	<% @paragraphs.each do |p| %>
  		<p class="article-text">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<%= p %></p>
  	<% end %>
  </div>
 </div>